<div class="container">
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= user.email %>
        <span class="badge badge-primary badge-pill">
          <%= user.approved %>
        </span>
        <%= link_to "Edit", edit_user_path(user), class: 'btn btn-danger'%>
      </li>
      <% end %>
   </ul>
</div>
