<%#= render "users/shared/links" %>
<div class="row justify-content-center align-items-center ">
    <div class="shadow-lg p-3 mb-5 bg-white 
            rounded w-50 p-3 center mt-5 border border-dark">
        <div class="text-monospace text-center">
            Formulaire d'inscription
        </div>
        <%= simple_form_for(resource, as: resource_name, 
            url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

          <%= f.input :username, required: true, autofocus: true,
                      placeholder: "Nom d'utilisateur",
                      label: "Nom d'utilisateur", 
                      wrapper_html: { class: 'text-monospace text-dark' }%>

          <%= f.input :password, required: true, 
                    hint: ("#{@minimum_password_length} 
                    characters minimum" if @minimum_password_length),
                    label: "Mot de passe",
                    wrapper_html: { class: 'text-monospace text-dark' }, 
                    placeholder: "Mot de passe" %>

          <%= f.input :password_confirmation, required: true,
                    hint: ("#{@minimum_password_length} 
                    characters minimum" if @minimum_password_length),
                    label: "Confirmation mot de passe",
                    wrapper_html: { class: 'text-monospace text-dark' }, 
                    placeholder: "Confirmation mot de passe" %>
          <%= f.input :admin, as: :boolean, label: "Administrateur", 
                      required: false %>
          <%= f.button :submit, "Enregistrer", 
                      class: "text-monospace btn btn-lg
                      btn-outline-success text-center"%>
        <% end %>   
    </div>
</div>
