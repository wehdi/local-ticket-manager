<div class="container">
  <h2><%= @message.title.capitalize  %></h2>
  <% if @message.user.admin? %>
    <span class="badge badge-pill badge-primary">Admin</span>
  <%end%>
  <p> Creer par : <%= @message.user.username%></p>
  <div class="rounded border bg-light bulle">
    <p><%= @message.description.capitalize.html_safe  %></p>
    <i> il y'a <%= time_ago_in_words(@message.created_at)%></i>
  </div>
    <%= render @message.comments  %>
  <h4> Reponse au message</h4>
  <%= render 'comments/form'  %>
  <%= link_to "List des demandes", messages_path, class: "btn btn-info" %>
  <% if user_signed_in? %>
    <% if @message.user_id == current_user.id %>
       <%= link_to "Editer votre demande", edit_message_path, class: "btn btn-primary" %>
       <%= link_to "Suprimer", message_path(@message),method: :delete, data: {confirm: "Etes vous sure ?"}, class: "btn btn-danger" %>
    <% end %>
  <% end %>
</div>
